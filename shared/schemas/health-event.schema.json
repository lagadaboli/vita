{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "health-event",
  "title": "HealthEvent",
  "description": "Cross-platform contract for a health event exchanged between mobile and backend.",
  "type": "object",
  "required": ["id", "type", "timestamp"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "string",
      "enum": ["glucose", "heartRate", "hrv", "sleep", "meal", "environment", "screenTime"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "value": {
      "type": "number"
    },
    "unit": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
